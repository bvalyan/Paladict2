<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/menuPageThreeColor"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/textColorPageThree"
            android:id="@+id/menu_page_title_text"
            android:layout_gravity="center"
            android:textAlignment="center"
            style="@style/TextPrimaryTitleStyle"
            android:textSize="@dimen/textSizexLarge"
            android:layout_width="match_parent"
            tools:text="@string/app_name"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/main_menu_image_view"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="@dimen/margin_normal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#991D1D1D"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ability_card_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/skill_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_width="@dimen/champion_skill_size"
        android:layout_height="@dimen/champion_skill_size"
        android:scaleType="centerCrop"
        tools:src="@drawable/yin_sample"/>

    <TextView
        android:id="@+id/skill_title_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizexLarge"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skill_image_view"

        tools:text="REVOLVER"/>

    <TextView
        android:id="@+id/skill_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/textSizeButton"
        app:layout_constraintTop_toBottomOf="@id/skill_title_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_medium"
        android:textAlignment="center"
        tools:text="A cursed six-shot semi-automatic revolver that deals 520 damage every 0.36s. Has a maximum Ammo count of 6 and is fully effective up to 50 units."
        />



</androidx.constraintlayout.widget.ConstraintLayout>